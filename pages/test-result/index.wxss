  background-size : 100% 100%;
}
.page-body{
  text-align: center;
}

.shareBtn{
  height : 102rpx;
  width : 100%;
  display: flex;
}
.homeBtn{
  position : relative;
  text-align: center;
  margin : 0 auto;
  width : 654rpx;
  height : 102rpx;
  background: #FFEE57;
  border: 4rpx solid #3A3A70;
  border-radius: 10rpx;
  animation: btnScale 0.8s infinite alternate;
}
.homeBtn::before{
  margin : 0;
  padding : 0;
  content : '';
  position : absolute;
  top : 102rpx;
  left : 0;
  width : 654rpx;
  height : 14rpx;
  background-color : #3A3A70;
  border : none;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
@keyframes btnScale{
  from {transform: scale(0.8,0.8);opacity: 0.8}
  to   {transform: scale(1,1);opacity: 1}
}

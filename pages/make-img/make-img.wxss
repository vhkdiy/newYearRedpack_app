page {
  min-height: 100%;
  background: hsl(6, 88%, 61%);
  padding-bottom: 158rpx;
  box-sizing: border-box;
  position: relative;
  width: 100%;
}

.top_bg {
  position: absolute;
  height: 399rpx;
  width: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}

.canvas_container {
  display: block;
  height: 494rpx;
  width: 494rpx;
  margin: 0 auto;
  box-sizing: border-box;
  background: #f5f3f6;
  border-radius: 12rpx;
}

.chose_redpack_container {
  width: 702rpx;
  height: 280rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 16rpx auto 0;
  padding-top: 24rpx;
  position: relative;
}

.chose_redpack_tip {
  padding-left: 24rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #333;
  text-align: left;
}

.chose_redpack_tip_img {
  position: absolute;
  top: -60rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 92rpx;
  width: 487rpx;
}

.redpack_items {
  margin-top: 21rpx;
  padding-left: 16rpx;
}

.redpack_item {
  display: inline-block;
  border-radius: 18rpx;
  box-sizing: border-box;
  margin: 0 6rpx;
  position: relative;
}

.select_redpack_item::after {
  content: '';
  width: 160rpx;
  height: 186rpx;
  border: 6rpx solid #108ee8;
  border-radius: 18rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.unSelect_redpack_item {
  opacity: 0.2;
}

.redpack_item_icon {
  width: 154rpx;
  height: 180rpx;
  display: block;
  margin: 3rpx auto;
}

.more_zhuti_tip {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #ffe1b0;
  margin: 18rpx 0 0 24rpx;
}

.more_zhuti_contianer {
  margin-top: 8rpx;
  padding-left: 12rpx;
}

.zhuti_item {
  height: 154rpx;
  width: 154rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  border-radius: 12rpx;
  margin: 4rpx 12rpx;
  display: inline-block;
}

.select_temp_icon{
  position: absolute;
  height: 28rpx;
  width: 28rpx;
  bottom: 10rpx;
  right: 10rpx;
}

.zhuti_item_img {
  width: 154rpx;
  height: 154rpx;
  border: 4rpx solid #fff;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.zhuti_name {
  position: absolute;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #fff;
  width: 100%;
  background: rgba(0, 0, 0, 0.6);
  bottom: 0;
  left: 0;
}

.chose_upload_img_btn {
  border-radius: 0;
}

.fade_bottom {
  width: 100%;
  text-align: center;
  height: 138rpx;
  background: hsl(6, 88%, 61%);
  bottom: 0rpx;
  left: 50%;
  transform: translateX(-50%);
  position: fixed;
}

.ok_btn {
  width: 702rpx;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #e14b38;
  background: #ffe2b1;
  border-radius: 8rpx;
  position: fixed;
  bottom: 24rpx;
  left: 50%;
  transform: translateX(-50%);
}

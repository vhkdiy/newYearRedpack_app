.container {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 12rpx;
  box-sizing: border-box;
}

.chose_img_bg{
  width: 100%;
  height: 100%;
}

.top_img{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.touchingTopImg{
  opacity: 0.4;
}

.img {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  overflow: hidden;
}

.img image {
  height: 400px;
}

.imgcrop {
  position: absolute;
  left: -50000rpx;
  top: -500000rpx;
}

.painter{
  position: absolute;
  left: -1000rpx;
  top: -5000rpx;
  z-index: 1000;
}


/* 选择图片 */
.accelerate_pop {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index: 100;
  display: -webkit-box;
  -webkit-box-pack: end;
  -webkit-box-align: end;
}

/*对话框的主体内容 */
.accelerate_pop_container {
  width: 100%;
  overflow: hidden;
  position: relative;
  background: #fff;
}

.accelerate_pop_item {
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  position: relative;
  font-size: 34rpx;
  color: #434343;
}

.accelerate_pop_item:last-of-type {
  color: #ff4a47;
  border-top: 14rpx solid #f5f5f5;
}

.accelerate_pop_item:first-of-type:after {
  content: '';
  position: absolute;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  transform-origin: 0 0;
  left: 0;
  bottom: 0;
  background: #dcdcdc;
}


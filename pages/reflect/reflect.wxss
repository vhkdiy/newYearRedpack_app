/* pages/reflect/reflect.wxss */
page{
  background:rgba(237,237,237,1);
}
.reflectPage{
  width : 690rpx;
  height : 624rpx;
  text-align: center;
  margin : 30rpx auto 0;
}
.bar{
  width : 100%;
  height : 117rpx;
  background:rgba(251,251,251,1);
  display: flex;
  align-items: center;
  /* justify-content: center; */
  text-align: center;
}
.count{
  font-size : 28rpx;
  width : 112rpx;
  margin : 0 73rpx 0 50rpx
}
.countValue{
  text-align: left;
  flex : 1;
  font-weight: bold;
}
.unit{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(34,34,34,1);
  line-height:40rpx;
}
.content{
  background:rgba(255,255,254,1);
}
.tip{
  text-align: left;
  width:112rpx;
  height:50rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(34,34,34,1);
  line-height:40rpx;
  padding : 37rpx 0 0 51rpx;
  align-items: center;
}
.input_money{
  display: flex;
  margin-left : 40rpx;
  text-align: left;
  height : 90rpx;
  font-size:70rpx;
  font-family:DINPro-Bold;
  font-weight:bold;
  color:rgba(34,34,34,1);
  line-height:90rpx;
}
.input{
  display: block;
  height : 90rpx;
  line-height:90rpx;
}
.line{
  height : 2rpx;
  background-color : #DDDDDD;
  margin : 49rpx 52rpx 27rpx;
}
.txt{
  margin-left : 51rpx;
  width:312rpx;
  height:37rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(151,151,151,1);
  line-height:37rpx;
}
.tx{
  color : blue;
}
.btn{
  margin : 38rpx auto 21rpx;
  width:585rpx;
  height:94rpx;
  background:rgba(7,193,96,1);
  border-radius:6rpx;
  line-height: 94rpx;



  font-size:34rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,255,254,1);

}
.date{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(151,151,151,1);
  line-height:33rpx;
  padding-bottom : 30rpx;
}
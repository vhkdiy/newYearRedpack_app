.container {
  width: 690rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  border: 6rpx solid rgba(255, 228, 174, 1);
  margin: 32rpx auto 0;
  box-sizing: border-box;
  padding: 32rpx 12rpx 22rpx;
}

.share_tip_img {
  margin: 0 auto;
  height: 650rpx;
  width: 650rpx;
  display: block;
}

.share_btn {
  display: block;
  width: 585rpx;
  height: 94rpx;
  background: rgba(7, 193, 96, 1);
  border-radius: 8rpx;
  line-height: 94rpx;
  margin: 36rpx auto 0;
  font-size: 34rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 254, 1);
  text-align: center;
  position: relative;
}

.fade_btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.share_tip {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 136, 136, 1);
  line-height: 33rpx;
  margin-top: 14rpx;
  text-align: center;
}

.create_share_img_btn {
  width: 585rpx;
  height: 94rpx;
  line-height: 94rpx;
  background: rgba(248, 248, 248, 1);
  border-radius: 8rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(7, 193, 96, 1);
  text-align: center;
  margin: 26rpx auto 0;
}

.get_redpack_btn {
  text-align: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
  margin-top: 35rpx;
}

.arror{
  width: 24rpx;
  height: 24rpx;
}

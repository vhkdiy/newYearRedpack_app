.dialog_bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  display: -webkit-box;
  -webkit-box-pack: center;
  -webkit-box-align: center;
}

.content {
  position: relative;
  width: 580rpx;
  background: rgba(249, 247, 250, 1);
  border-radius: 6rpx;
  padding: 42rpx 50rpx 48rpx;
}

.close_btn {
  height: 80rpx;
  width: 80rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.title {
  font-size: 34rpx;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.tip {
  margin-top: 32rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(151, 151, 151, 1);
  text-align: left;
}

.request_btn {
  width: 480rpx;
  height: 94rpx;
  line-height: 94rpx;
  border-radius: 6px;
  text-align: center;
  margin: 42rpx auto 0;
}

.waiting {
  color: #fff;
  background: rgba(184, 184, 184, 1);
}

.fail_btn {
  color: #fff;
  background: #07C160;
}

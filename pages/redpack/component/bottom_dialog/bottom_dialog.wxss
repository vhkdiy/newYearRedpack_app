/* pages/redpack/component/bottom_dialog/bottom_dialog.wxss */
@import "/fonts/DINPro.wxss";
.bottom_dialog{
  width : 100%;
  height : 100%;
  position: fixed;
  top : 0;
  left : 0;
  display : flex;
  z-index: 100;
  align-items: flex-end;
  justify-content: flex-end;
  background-color : rgba(0,0,0,0.6);
  text-align: center;
}
.close{
  position : absolute;
  top : 0rpx;
  left : 0rpx;
  width : 80rpx;
  height : 80rpx;
}
.content_open{
  position: relative;
  width : 100%;
  height : 690rpx;
  background-color : white;
  text-align: center;
  animation: dialogOpen 0.3s;
}
@keyframes dialogOpen{
  from {top : 690rpx;}
  to   {top : 0;}
}
.content_close{
  position: relative;
  width : 100%;
  height : 690rpx;
  background-color : white;
  text-align: center;
  animation: dialogClose 0.3s;
}
@keyframes dialogClose{
  from {top : 0;}
  to   {top : 690rpx;}
}

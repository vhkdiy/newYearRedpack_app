.btn{
  margin : 26rpx auto 0;
  width : 585rpx;
  height : 85rpx;
  line-height: 85rpx;
  background: rgba(255,255,254,0.5);
  border-radius: 6rpx;
  font-size: 28rpx;
  color: rgba(255,255,254,0.7);
  letter-spacing: 0;
  text-align: center;
}
.monry{
  margin-top : 4rpx;
  font-family: PingFangSC-Semibold;
  font-size: 38rpx;
  color: #F0E4AD;
  letter-spacing: 2rpx;
}
.num{
  font-family: PingFangSC-Semibold;
  font-size: 72rpx;
  color: #F0E4AD;
  letter-spacing: 2rpx;
}
.money_tip{
  opacity: 0.8;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #F0E4AD;
  padding-left : 10rpx;
}
.monry_error{
  margin-top : 48rpx;
  margin-right : 35rpx;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #979797;
  letter-spacing: 0;
}
@keyframes scale_anim{
  0% {
    transform: scale(0.95, 0.95);
  }

  50% {
    transform: scale(1.05, 1.05);
  }

  100% {
    transform: scale(0.95, 0.95);
  }
}

.btns{
  display : flex;
  width : 100%;
  height : 110rpx;
  font-size : 30rpx;
}
.button{
  flex : 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.smallIcon{
  width : 32rpx;
  height : 32rpx;
}
.smallShare{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #FFFFFE;
  letter-spacing: 0;

  overflow: inherit;
  padding: 0;
  margin : 0 0 0 10rpx;

  line-height: inherit;
  border-radius: 0;
  background-color: transparent;
  text-align: center;
}
.smallShare::after{
  width : auto;
  display: none;
}


.txt{
  margin-left : 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #FFFFFE;
  letter-spacing: 0;
}
.countBar{
  display: flex;

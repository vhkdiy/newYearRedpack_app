/* pages/redpack/redpack.wxss */
.page{
  width : 100%;
  height : 100%;
  overflow: hidden;
  overflow-y: scroll;
}
.headbg{
  position: absolute;
  top : 0;
  left : 0;
  width : 100%;
}
.layout{
  position : relative;
  background-color : #D85940;
  text-align: center;
}
.titleBar{
  padding-top : 10rpx;
  position: relative;
  width : 100%;
  height : 56rpx;
  line-height: 56rpx;
  display: flex;
  justify-content: center;
}
.icon{
  width : 56rpx;
  height : 56rpx;
  border-radius: 56rpx;
}
.title{
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #FFE1B0;
  letter-spacing: 0;
  margin-left : 12rpx;
}
.imageView{
  margin: 0 auto;
  width : 616rpx;
  height : auto;
  position: relative;
}
.paddingView{
  border-radius: 8rpx;
  background-color : white;
  height: 618rpx;
}

.userImage{

  border-radius: 8rpx;
  width : 592rpx;
  margin-top : 12rpx;
}
.tip{
  position: relative;
  text-align: center;
  font-size: 44rpx;
  color: #FFE1B0;
  margin : 13rpx auto 18rpx auto;
  font-weight: bold;
}
.redpackTipBg{
  position: fixed;
  top : 0;
  left : 0;
  width : 100%;
  height : 100%;
}
.redpackTip{
  position : absolute;
  width : 565rpx;
  left : 50%;
  transform: translate(-50%,0);
  top : 230rpx;
}
.window{
  position: absolute;
  top : -634rpx ;
  left: -930rpx;
  width :616rpx;
  height : 280rpx;
  border: 1000rpx solid rgba(0,0,0,0.50);
  border-radius: 12rpx;
}
.redpack1{
  position : absolute;
  bottom : 262rpx;
  left : 34rpx;
  width : 140rpx;
  height : 140rpx;
  animation: scale_anim 0.7s infinite linear;
}
.redpack2{
  position : absolute;

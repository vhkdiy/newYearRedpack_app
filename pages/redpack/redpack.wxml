          <image class="image" src="/images/gift_selected.png" />
          <view class="left_item">
            <view class="blessing">祝你新年行大运<image class="sex" src="/images/gift_selected.png" node="widthFix"/></view>
            <view class="date">1月6日 17:11</view>
          </view>
          <view class="right_item">
            <!-- <block>
              <view class="money">50000.00元</view>

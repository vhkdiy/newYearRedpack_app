page{
  height: 100%;
  width: 100%;
  background:rgba(245,245,245,1);
}

.container{
  position: relative;
  width:690rpx;
  height:898rpx;
  margin: 81rpx auto 0 auto;
  background:rgba(255,255,254,1);
  border-radius:6rpx;
  padding-top: 102rpx;
}

/* 用户头像 */
.container .user-img{
  position: absolute;
  width:125rpx;
  height:125rpx;
  border-radius: 50%;
  left: 50%;
  top: 0;
  transform: translate(-50%,-53rpx);
  -webkit-transform: translate(-50%,-53rpx);
  background: #ccc;
  border: 8rpx solid #fff;
}

/* 查看示例 */
.container .look-instance{
  position: absolute;
  width:96rpx;
  height:33rpx;
  top: 22rpx;
  right: 22rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(87,107,149,1);
}

/* 生成图片 */
.container .composite-picture{
  position: relative;
  width: 430rpx;
  height: 430rpx;
  border-radius:6rpx;
  margin: 0 auto;
  overflow: hidden;
}

.container .composite-picture image{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.container .composite-picture .mask{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background:rgba(0,0,0,1);
  opacity: .6;
}

.container .composite-picture .wealth-btn{
  position: absolute;
  width: 330rpx;
  height: 62rpx;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  -webkit-transform: translateX(-50%);
  border-radius:33rpx;
  border:2rpx solid rgba(255,255,255,1);

  text-align: center;
  font-size:34rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,254,1);
  line-height:62rpx;
}


/* 表单 */
.mg24{
  margin-top: 24rpx;
}
form{
  position: relative;
  display: block;
  width: 586rpx;
  margin: 30rpx auto 0 auto;
}


form .item{
  width:586rpx;
  height:96rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  background:rgba(247,247,247,1);
  border-radius:10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
form .item text{
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(34,34,34,1);
}
form .item input{
  flex: 1;
  font-family:PingFangSC-Regular;
  font-weight:400;
  text-align: right;
  box-sizing: border-box;
  padding: 0 7rpx;
}
.placeholder{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(221,221,221,1);
}

form .inputErrorMsg{
  font-size:24rpx;
  height:33rpx;
  margin: 6rpx 0 5rpx 0;
  text-align: center;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(235,74,56,1);
  line-height:33rpx;
}

form .prompt{
  margin-bottom: 14rpx;
  text-align: center;
  height:33rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(136,136,136,1);
  line-height:33rpx;
}
form .btn{
  position: relative;
  height:94rpx;
}
form .btn .submit{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background:rgba(234,95,57,1);
  border-radius:8rpx;
  
  font-size:34rpx;
  text-align: center;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,255,254,1);
  line-height:94rpx;
}


form .btn .scope-userInfo{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0;
}

button::after{
  display: none;
}







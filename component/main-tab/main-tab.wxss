.main_tab_fade_container {
  height: 102rpx;
  background: rgba(255, 255, 255, 0);
  width: 100%;
}

.fade_btn {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.isIphoneX {
  height: 132rpx;
}

.main_tab_container {
  height: 102rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: -webkit-box;
  -webkit-box-align: center;
  z-index: 999999999;
  background: #ffffff;
}

.tab_top_line {
  position: absolute;
  top: 0;
  left: 0;
  height: 1px;
  width: 100%;
  background-color: rgba(144, 144, 144, 0.30);
  transform: scaleY(0.5);
  transform-origin: 0 0;
}

.isIphoneX .main_tab_container {
  height: 132rpx;
  padding-bottom: 30rpx;
}

.mian_tab_item {
  width: 0;
  -webkit-box-flex: 1;
  text-align: center;
  position: relative;
}

.main_tab_icon_container {
  width: 54rpx;
  height: 54rpx;
  display: block;
  margin: 0 auto;
  position: relative;
}

.main_tab_scale{
  animation: main_tab_scale 0.7s infinite linear;
}

@keyframes main_tab_scale {
  0% {
    transform: scale(1, 1);
  }

  50% {
    transform: scale(1.2, 1.2);
  }

  100% {
    transform: scale(1, 1);
  }
}

.main_tab_icon{
  width: 100%;
  height: 100%;
}
.main_tab_icon_animation{
  width: 100%;
  height: 100%;
  animation: imageScale 0.8s infinite alternate;
}
@keyframes imageScale{
  from {transform: scale(0.8,0.8);opacity: 0.8}
  to   {transform: scale(1,1);opacity: 1}
}

.tab_red_point{
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  top:0;
  right: 0;
  background-color: #fc3432;
  border-radius: 50%;
}

.main_tab_name {
  display: block;
  font-family: PingFangSC-Medium;
  font-size: 20rpx;
  color: #3a3a70;
}


.normal_color {
  color: #999;
}
